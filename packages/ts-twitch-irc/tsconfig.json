{
  "display": "Node 18",

  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules", "lib/**/*.test.ts", "dist"]
}
